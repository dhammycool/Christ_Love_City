
 

  <div class="sidebar">
    <h2>HeadQuater Admin</h2>
   <a href="#"  class="sidebar-link" data-section="dashboard">Dashboard</a>
    <a href="#" class="sidebar-link" data-section="approvals">HQ Approvals</a>
    <a href="#" class="sidebar-link" data-section="settings">Settings</a>
    <a href="/rout/logout">Logout</a>
  </div>

  <div class="mainy">
    <!-- Dashboard Section -->
     <h1>Hello <%= Username %></h1>
    <div id="dashboard" class="content-section">
      <h1>Dashboard Metrics</h1>
      <div class="metrics">
        <div class="card">
          <h3>Total Users</h3>
          <p><%= users %></p>
        </div>
        <div class="card">
          <h3>Total HQs</h3>
          <p><%= hq %></p>
        </div>
        <div class="card">
          <h3>Total Branches</h3>
          <p><%= branch %></p>
        </div>
        <div class="card">
          <h3>Total Members</h3>
          <p><%= members %></p>
        </div>
      </div>
    </div>

   <!-- Approvals Section -->
<div id="approvals" class="content-section" style="display:none;">
  <h1>HQ Approvals</h1>

  <% if (approve && approve.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Church HeadQuarters</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% approve.forEach(entry => { %>
          <tr>
            <td><%= entry.name %></td>
            <td><%= entry.email %></td>
            <td><%= entry.phone_number %></td>
       <td>
  <form action="/rout/hq/<%= entry.id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this HQ?');">
  <button type="submit" class="btn btn-delete">Delete</button>
</form>

<form action="/rout/hq/<%= entry.id %>/approve" method="POST" style="display:inline;">
  <button type="submit" class="btn btn-approve">Approve</button>
</form>
</td>
            
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No HQs pending approval.</p>
  <% } %>

</div>

    <!-- Settings Section -->
    <div id="settings" class="content-section" style="display:none;">
      <h1>Settings</h1>
      <form action="/rout/settings" method="POST">
  <label for="name">Name</label><br>
  <input type="text" id="name" name="name" value="<%= user.name %>"><br><br>

  <label for="email">Email</label><br>
  <input type="email" id="email" name="email" value="<%= user.email %>"><br><br>

  <label for="phone">Phone Number</label><br>
  <input type="text" id="phone" name="phone" value="<%= user.phone %>"><br><br>

  <label for="password">New Password</label><br>
  <input type="password" id="password" name="password"><br><br>

  <button type="submit">Update Settings</button>
</form>

    </div>

  </div>

 