 <div class="container">
    <h2>Kindly Register Using the Dropdown Below</h2>

    <form action="/register" method="POST", enctype="multipart/form-data">

  <label for="role">Select Role:</label>

  <select name="role" id="role"  required>
    <option value="">--Select Role--</option>
    <% roles.forEach(role=>{  %>
   <option value="<%=role.name %>"><%= role.name%></option>
    <% }) %>
  </select>

  <!-- HQ + Admin -->
  <div id="hqFields" style="display:none;">
    <input name="church_name" placeholder="Church HQ Name" required />
    <select name="denomination_id" >
      <% denominations.forEach(d => { %>
        <option value="<%= d.id %>"><%= d.name %></option>
      <% }) %>
    </select>
    <input name="Church_Hq_Email" placeholder="Church HQ email" required />
     <input name="Church_Hq_mobile" placeholder="Church HQ Mobile" required/>
     
  <textarea name="Church_Hq_Address" id="Church_Hq_Address" rows="address" placeholder="Church HQ Address"></textarea>
  </div>

  <!-- Branch Admin -->
  <div id="branchFields" style="display:none;">
    <select name="hq_id">
       <option value="">--Select Headquater--</option>
      <% hqList.forEach(h => { %>
        <option value="<%= h.id %>"><%= h.name %></option>
      <% }) %>
    </select>
    <input name="branch_name" placeholder="Branch Name" required />
    
    <input name="branch_address" placeholder="Branch Address" required />
    
    <input name="branch_email" placeholder="Branch Email" required />
    
    <input name="branch_mobile" placeholder="Branch Mobile" required />
  </div>

  <!-- Members -->
  <div id="memberFields" style="display:none;">
    <select name="hq_id_member">
        <option value="">--Select Headquater--</option>
      <% hqList.forEach(h => { %>
        <option value="<%= h.id %>"><%= h.name %></option>
      <% }) %>
    </select>

    <select name="branch_id">
       <option value="">--Select Branch--</option>
      <% branches.forEach(b => { %>
        <option value="<%= b.id %>"><%= b.name %></option>
      <% }) %>
    </select>
  </div>

   <label for="full_name">Full Name:</label>
  <input name="full_name"  required />

  <label for="email">Email:</label>
  <input name="email"  type="email" required />

  <label for="Phone_number">Phone Number</label>
  <input name="Phone_number"  required/>

  <label for="password">Password</label>
  <input name="password"  type="password" required />

  <label for="gender">Gender:</label>
  <select name="gender" id="gender" required>
    <option value="">--Select Gender</option>
    <option value="male">Male</option>
    <option value="female">Female</option>
  </select>
  <label for="date_of_birth">Date of Birth:</label>

  <input type="date" name="date_of_birth" id="dob" required>
  <label for="profile_photo">Upload Profile Photo:</label>

  <input type="file" id="profile_photo" name="profile_photo" accept="image/*" required>
  
  <label for="bio">Bio:</label>
  <textarea name="bio" id="bio" rows="4" placeholder="Tell us about yourself..."></textarea>
  

  <button type="submit">Register</button>
</form>


  </div>